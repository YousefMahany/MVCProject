@model ApplicationUser
@{
    ViewData["Title"] = "Details";
}

<h1>User Details</h1>
<br />
<br />
<div class="row">
    <div class="col-12">
        <div class="form-group">
            <label asp-for="@Model.FirstName" class="col-form-label"></label>
            <input asp-for="@Model.FirstName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.LastName" class="col-form-label"></label>
            <input asp-for="@Model.LastName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email" class="col-form-label"></label>
            <input asp-for="@Model.Email" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.PhoneNumber" class="col-form-label"></label>
            <input asp-for="@Model.PhoneNumber" class="form-control" readonly />
        </div>
       
        <br />

        <a class="btn btn-success" asp-action="Update" asp-route-id="@Model.Id">Update</a> |
        <a class="btn btn-light" asp-action="Index">Back To List</a>
    </div>
</div>

